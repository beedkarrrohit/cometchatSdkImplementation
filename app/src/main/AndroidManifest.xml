<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cometchatprotask">

    <application
        android:name=".application.Initializer"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CometChatProtask">
        <activity android:name=".cometchatactivities.CallingScreen"></activity>
        <activity
            android:name=".cometchatactivities.GroupChatScreenActivity"
            android:theme="@style/Theme.SplashTheme" />
        <activity
            android:name=".cometchatactivities.ChatScreenActivity"
            android:theme="@style/Theme.SplashTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".cometchatactivities.CometChatActivity" />
        <activity
            android:name=".splashactivity.SplashActivity"
            android:theme="@style/Theme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.MainActivity" />
    </application>

</manifest>